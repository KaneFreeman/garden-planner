{
  "name": "garden-planner",
  "private": true,
  "scripts": {
    "start": "MONGO_URL=mongodb://localhost:27017/garden-planner meteor run --settings settings.json --port 3100",
    "build": "docker build . -t garden-planner",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "lint": "cross-env NODE_ENV=development eslint . --cache --ext .ts"
  },
  "dependencies": {
    "@babel/runtime": "7.17.8",
    "@emotion/react": "11.8.2",
    "@emotion/styled": "11.8.1",
    "@mui/icons-material": "5.5.1",
    "@mui/lab": "5.0.0-alpha.75",
    "@mui/material": "5.5.3",
    "date-fns": "2.28.0",
    "html5-file-selector": "2.1.0",
    "meteor-node-stubs": "1.2.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-router": "6.3.0",
    "react-router-dom": "6.3.0",
    "simpl-schema": "1.12.0"
  },
  "devDependencies": {
    "@types/meteor": "2.6.1",
    "@types/mocha": "9.1.0",
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.14",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "cross-env": "7.0.3",
    "eslint": "8.12.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "16.2.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "prettier": "2.6.1",
    "typescript": "4.6.3"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.tsx",
      "server": "server/main.ts"
    },
    "testModule": "tests/main.ts"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ],
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 120
  }
}
